@model Mini_Projet.ViewModel.EditViewModel

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Product</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post" asp-controller="Produit" asp-action="Edit">

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ProduitId" />
            <input hidden asp-for="ExistingImagePath" />
            <div class="form-group">
                <label asp-for="Nom" class="col-sm-2 col-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Nom" class="form-control" placeholder="Nom" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Prix" class="col-sm-2 col-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Prix" class="form-control" placeholder="Prix" />
                    <span asp-validation-for="Prix" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CategorieId" class="col-sm-2 col-control-label"></label>
                <div class="col-sm-10">
                    <select asp-for="CategorieId" class="form-control" asp-items="ViewBag.CategorieId"></select>
                    <span asp-validation-for="CategorieId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Quantite" class="col-sm-2 col-control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Quantite" class="form-control" placeholder="Quantite" />
                    <span asp-validation-for="Quantite" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="col-sm-2 col-control-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Image" class="custom-file-input form-control" />
                        <label class="custom-file-label">cliquer ici pour changer la photo</label>
                        @* <span asp-validation-for="ImagePath" class="text-danger"></span> *@
                    </div>
                </div>
            </div>
            @*Display the existing Product photo*@
            <div class="form-group row col-sm-4 offset-4">
                @*<img src="@photoPath" asp-append-version="true" height="100" width="100" />*@
            </div>
            <hr />
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="index" asp-controller="Produit" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
                $("#imageEmp").attr("src", "/" + fileName);
            });
        });
    </script>
    }
<div>
    <a asp-action="Index">Back to List</a>
</div>

