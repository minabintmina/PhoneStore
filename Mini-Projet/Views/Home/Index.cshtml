@{
    ViewData["Title"] = "Home Page";
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    .container {
        position: relative;
        width: 100%;
        height: 100vh; /* Set the height to the full viewport height */
        overflow: hidden;
    }

    .video-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%; /* Set the height to the full viewport height */
        z-index: -1;
    }

        .video-background video {
            object-fit: cover;
            width: 100%;
            height: 100%; /* Set the height to the full viewport height */
            opacity: 0.75;
        }

    .content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
        color: #fff;
        text-align: center;
    }

    .classy-button {
        display: inline-block;
        padding: 15px 30px;
        font-size: 20px;
        font-weight: bold;
        text-decoration: none;
        background-color: #333;
        color: #fff;
        border: none;
        border-radius: 30px;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    }

        .classy-button:hover {
            background-color: #555;
            color: #fff;
        }

    h1 {
        font-size: 40px;
        font-family: Arial, sans-serif;
        font-weight: bold;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
</style>

<div class="container">
    <div class="video-background">
        <video autoplay muted loop>
            <source src="~/images/1.mp4" type="video/mp4">
        </video>
    </div>
    <div class="content">
        <h1>Welcome to our Store</h1>
        <a href="../Produit/Index" class="classy-button">Explore Now</a>
    </div>
</div>
