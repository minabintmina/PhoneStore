@model IEnumerable<Mini_Projet.Models.Commande>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Panier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Panier.PanierId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CommandeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CommandeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CommandeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
